<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.WeatherWidget.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">10dp</item>
        <item name="appWidgetPadding">0dp</item>
        <item name="appWidgetInnerRadius">10dp</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
    </style>
    <style name="Theme.WeatherWidget.topContainer">
        <item name="appWidgetRadius">10dp</item>
        <item name="appWidgetPadding">0dp</item>
        <item name="appWidgetInnerRadius">10dp</item>
    </style>

    <style name="Theme.WeatherWidget.AppWidgetContainer" parent="Theme.WeatherWidget.AppWidgetContainerParent" />
</resources>